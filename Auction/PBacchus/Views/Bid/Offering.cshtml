@using Auction.Domain.Bacchus
@model Auction.Facade.Bacchus.BidViewModel

@{
    ViewData["Title"] = "Place Offer";
    var product = (ProductObject) ViewData["Product"];
}

<h2>@product.Name</h2>

<h4>@product.Description</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Offering">
            <div class="form-group">
                <b>@Html.Raw("Enter your name")</b>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Offer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GoToHome">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
